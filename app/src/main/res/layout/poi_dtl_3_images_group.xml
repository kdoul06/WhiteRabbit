<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/images_group">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/ic_close_light"
                    android:id="@+id/poiImage1"
                android:src="@mipmap/poi_image_01"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:focusable="true"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:contextClickable="false" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/ic_close_light"
                android:id="@+id/poiImage2"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/poiImage1"
                android:layout_toEndOf="@+id/poiImage1"
                android:src="@mipmap/poi_image_02"
                android:layout_weight="1"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/ic_close_light"
                android:id="@+id/poiImage3"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/poiImage2"
                android:layout_toEndOf="@+id/poiImage2"
                android:src="@mipmap/poi_image_03"
                android:layout_weight="1"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@mipmap/poi_image_03"
                android:id="@+id/poiImage4"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:focusable="false" />
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>
