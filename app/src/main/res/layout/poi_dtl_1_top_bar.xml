<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/poi_top_bar"
    android:orientation="vertical"
    android:background="?attr/colorAccent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_2">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_1"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="33dip"
                app:srcCompat="@drawable/ic_share_variant_black_18dp"
                android:id="@+id/imageView"
                android:layout_weight="1.41"
                android:clickable="true" />

            <TextView
                android:text="7.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/poiAvgScore"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_text_color"
                android:textSize="65sp"
                android:layout_weight="0.85"
                android:inputType="numberDecimal"
                android:layout_gravity="center" />

            <TextView
                android:text="+Follow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/followTxt"
                android:gravity="top|right"
                android:clickable="true"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:layout_weight="0.58"
                android:paddingRight="10dp" />
        </LinearLayout>

        <TextView
            android:text="poi Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressView"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/cast_expanded_controller_text_color" />

        <TextView
            android:text="categoryTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/categoryTxt"
            android:gravity="center_horizontal"
            android:textColor="@color/cast_expanded_controller_text_color" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:id="@+id/categorySpiner"
            android:background="@color/wr_background_color"
            android:spinnerMode="dialog" />
    </LinearLayout>


</LinearLayout>
